<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/os_feature_img"
    tools:context=".fragments.AndroidOneFeatureDetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"/>

            <ImageView
                android:id="@+id/smart_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:src="@drawable/smart_btn"
                android:layout_margin="10dp"/>


            <ImageView
                android:id="@+id/secure_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:src="@drawable/secure_btn"
                android:layout_margin="10dp"/>


            <ImageView
                android:id="@+id/amazing_btn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:src="@drawable/amazing_btn"
                android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>