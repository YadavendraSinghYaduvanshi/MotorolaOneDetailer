<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SmartCameraFunctionFargment"
    android:background="@drawable/camera_function_background_img"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="5"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/google_lens"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/google_lens"/>

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/spot_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/spot_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="5"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/portrait_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/portrait_mode"/>

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/time_lapse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/time_lapse_btn"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>